<%- model_class = FoodDe -%>
<div class="page-header">
  <h1>Foods</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Manufacturer </th>
      <th> Scientific Name </th>
      <th> Common Name</th>
      <th> Description</th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @food_des.each do |food_de| %>
      <tr>
        <!--<td><%= link_to food_de.id, food_de_path(food_de) %></td>-->
        <td><%= food_de.manufacname %></td>
        <td><%= food_de.sciname %></td>
        <td><%= food_de.comname %></td>
        <td><%= food_de.long_desc %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_food_de_path(food_de), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      food_de_path(food_de),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_food_de_path,
            :class => 'btn btn-primary' %>
